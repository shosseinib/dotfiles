#include-file = ~/.cache/wal/colors-wal-polybar.ini

[bar/bar]
width = 100%
height = 60
fixed-center = true
dpi = 210
background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Source Code Pro:pixel;size=10;5
font-1 = Source Code Pro:pixel;size=10;6

modules-left = cpu network battery
modules-center = ewmh
modules-right = date powermenu

tray-detached = false
tray-align = center
tray-position = right
tray-padding = 2
tray-maxsize = 32
tray-scale = 1

wm-restack = bspwm
override-redirect = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor = pointer
cursor-click = pointer

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = false

label-empty = %name%
label-empty-foreground = ${colors.empty}
label-empty-padding = 1

label-active = %name%
label-active-foreground = ${colors.focused} 
label-active-padding = 1
 
label-occupied = %name%
label-occupied-foreground = ${colors.occupied}
label-occupied-padding = 1
 
label-urgent = %name%
label-urgent-foreground = ${colors.urgent}
label-urgent-padding = 1

[module/bspwm]
type = internal/bspwm

label-empty = %name%
label-empty-padding = 1
label-empty-foreground = ${colors.empty}

label-focused = %name%
label-focused-padding = 1
label-focused-foreground = ${colors.focused} 

label-occupied = %name%
label-occupied-padding = 1
label-occupied-foreground = ${colors.occupied}

label-urgent = %name%!
label-urgent-padding = 1
label-urgent-foreground = ${colors.urgent}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/date]
type = internal/date
interval = 5
time = %A %e %b / %I:%M %p
format-prefix-foreground = ${colors.foreground}
label = %date% %time%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage:2%%

[module/network]
type = internal/network
interface = wlan0
interval = 3.0

format-connected = <label-connected>
label-connected =  %essid%%downspeed:9%

format-disconnected = <label-disconnected>
label-disconnected = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging =  <label-charging>
format-discharging =  <label-discharging>
format-full-prefix = " "

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-close = 
label-separator = /

menu-0-0 = Reboot
menu-0-0-exec = #powermenu.open.1
menu-0-1 = Power off
menu-0-1-exec = #powermenu.open.2

menu-1-0 = Cancel
menu-1-0-exec = #powermenu.open.0
menu-1-1 = Reboot
menu-1-1-exec = loginctl reboot

menu-2-0 = Cancel
menu-2-0-exec = #powermenu.open.0
menu-2-1 = Power off
menu-2-1-exec = loginctl poweroff

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

