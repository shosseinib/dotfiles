[module/gdate]
type = custom/script
interval = 60
exec = "date "+%a %d %b""
tail = true
format = <label>
format-prefix = "ï³ "
format-prefix-foreground = ${colors.foreground}
label = %output:0:50%

[module/jdate]
type = custom/script
exec = "jdate "+%d %B""
tail = true
interval = 60
format = <label>
format-prefix = "ï—³ "
format-prefix-foreground = ${colors.foreground}
label = %output:0:50%

